{
  "$schema": "https://1c-syntax.github.io/bsl-language-server/configuration/schema.json",
  "language": "ru",
  "diagnostics": {
    "computeTrigger": "onType",
    "parameters": {
      "CognitiveComplexity": {
        "complexityThreshold": 150,
        "checkModuleBody": true
      },
      "CyclomaticComplexity": {
        "complexityThreshold": 80,
          "checkModuleBody": true
      },
      "Typo": {
        "minWordLength": 3,
        "userWordsToIgnore": "Метаданного,Метаданное,субконто"
      },
      "NestedStatements": {
        "maxAllowedLevel": 10
      },
	  "IfConditionComplexity": {
        "maxIfConditionComplexity": 10
      },
      "DuplicateStringLiteral": {
        "allowedNumberCopies": 20,
        "analyzeFile": false,
        "caseSensitive": false,
        "minTextLength": 5
      },
      "IfElseIfEndsWithElse": false
    }
  }
}
